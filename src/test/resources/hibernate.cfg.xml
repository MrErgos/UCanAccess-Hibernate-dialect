<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>

        <!-- Database connection properties -->
        <property name="connection.driver_class">net.ucanaccess.jdbc.UcanaccessDriver</property>
        <property name="connection.url">
        	jdbc:ucanaccess://C:/Users/Public/UCanHibernate.accdb;newDatabaseVersion=V2010
        </property>
        <property name="connection.username"></property>
        <property name="connection.password"/>
        <property name="dialect">org.hibernate.custom.dialect.ucanaccess.UCanAccessDialect</property>
        <property name="hbm2ddl.auto">create</property>
        <!--
        <property name="connection.driver_class">org.hsqldb.jdbc.JDBCDriver</property>
        <property name="connection.url">
        	jdbc:hsqldb:file:C:/__tmp/hsqldb/UCanHibernate
        </property>
        <property name="connection.username">SA</property>
        <property name="connection.password"/>
        <property name="dialect">org.hibernate.dialect.HSQLDialect</property>
        <property name="hbm2ddl.auto">create</property>
        -->
        
        <!-- JDBC connection pool (use the built-in) -->
        <property name="connection.pool_size">1</property>

		<!-- protect against table/column names with spaces, etc. -->
		<property name="globally_quoted_identifiers">true</property>

        <!-- Disable the second-level cache  -->
        <property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>

        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">true</property>
        <property name="format_sql">false</property>

		<!-- (disabled in favour of <mapping class ...> and annotations)
        <mapping resource="org/hibernate/tutorial/hbm/Event.hbm.xml"/>
        -->
        <mapping class="org.hibernate.tutorial.hbm.Event"/>
        <mapping class="org.hibernate.tutorial.hbm.Guest"/>

    </session-factory>

</hibernate-configuration>